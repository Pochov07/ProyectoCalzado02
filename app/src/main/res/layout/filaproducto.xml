<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1EF">


            <ImageView
                android:id="@+id/fila_imagenProducto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="48dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fila_nombreProducto"
                app:srcCompat="@drawable/f_producto" />

            <ImageButton
                android:id="@+id/fila_btnEditarProducto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/fila_btnEliminarProducto"
                app:layout_constraintTop_toBottomOf="@+id/fila_imagenProducto"
                app:srcCompat="@drawable/ic_editar"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/fila_btnEliminarProducto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="48dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fila_imagenProducto"
                app:srcCompat="@drawable/ic_eliminar"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/fila_nombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="56dp"
                android:text="NOMBRE"
                android:textColor="#1B2560"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/filaCodProducto"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="Codigo"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/filaColorProducto"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:text="Color"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/filaCodProducto"
                app:layout_constraintTop_toBottomOf="@+id/filaCodProducto" />

            <TextView
                android:id="@+id/filaStockProducto"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:text="Stock"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/filaColorProducto"
                app:layout_constraintTop_toBottomOf="@+id/filaColorProducto" />

            <TextView
                android:id="@+id/filaTallaProducto"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:text="Talla"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/filaStockProducto"
                app:layout_constraintTop_toBottomOf="@+id/filaStockProducto" />

            <TextView
                android:id="@+id/filaPrecioProducto"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Precio"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/filaTallaProducto"
                app:layout_constraintTop_toBottomOf="@+id/filaTallaProducto"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="CÃ³digo:" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Color:"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Stock: "
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Talla: "
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Precio: S/"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>